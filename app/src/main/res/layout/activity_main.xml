<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302E2E"
    android:textAlignment="textEnd"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:clipChildren="false"

        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/clearBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/buttoncolor"
            android:src="@drawable/clear" />

        <ImageButton
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt0" />

        <ImageButton
            android:id="@+id/equalBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/buttoncolor"
            android:src="@drawable/equal" />

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/buttonshape"
            android:src="@drawable/add" />

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt1" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt2" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt3" />

        <ImageButton
            android:id="@+id/minusBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@drawable/buttonshape"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt4" />

        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt5" />

        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt6" />

        <ImageButton
            android:id="@+id/multBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/buttonshape"
            android:src="@drawable/multiply" />

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt7" />

        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt8" />

        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/buttonshape"
            android:src="@drawable/bt9" />

        <ImageButton
            android:id="@+id/divideBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/buttonshape"
            android:src="@drawable/divide" />


    </GridLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:fontFamily="casual"
        android:paddingRight="35dp"
        android:textAlignment="textEnd"
        android:textColor="#D6BABA"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:fontFamily="casual"
        android:paddingRight="30dp"
        android:textAlignment="textEnd"
        android:textColor="#F1D6D6"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/clearAll"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E1DEDE"
        android:text="AC"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

